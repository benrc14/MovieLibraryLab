
@{
    ViewData["Title"] = "Movie Submission";
}

@model FilmLibrary.Models.ApplicationResponse

<h2>Please fill out the information to submit a movie</h2>

<div>
    <form method="post">
        <label asp-for="CategoryId">Category: </label>
        <select asp-for="CategoryId">
            <option value="">Select a category</option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
            <option>TV-14</option>
            <option>TV-PG</option>
            <option>TV-Y7</option>
            <option>UR</option>
        </select><br />

        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo">Lent to: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit</button>
        <div asp-validation-summary="All"></div>
    </form>

</div>